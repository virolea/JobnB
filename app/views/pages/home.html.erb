<div class="wrapper missions" id="wrapper-missions">
  <div class="container text-center padded">

    <h2>Un aperçu des missions disponibles</h2>
    <div class="row">
      <% @posts[0..2].each do |p| %>
      <%= render "shared/post", post: p %>
      <% end %>
    </div>
    <div class="text-center">
      <h3><%= link_to "See more missions", posts_path, class: "navbar-wagon-item navbar-wagon-button btn"  %></h3>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      $("#scroll-link").click(function() {
      $('html,body').animate({scrollTop: $('#wrapper').offset().top},'slow');
    });
    })
  <% end %>
<% end %>


